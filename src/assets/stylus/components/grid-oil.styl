.grid-oil {

    .griddle {
        th {
            cursor: pointer;
        }

        .top-section {
            clear: both;
            display: table;
            width: 100%;
            padding-bottom: 3px;

            .filter-container {
                input {
                    height: 30px;
                }
            }
        }

        .griddle-filter {
            float: left;
            width: 50%;
            text-align: left;
            color: #222;
            min-height: 1px;
        }

        .griddle-settings-toggle {
            float: left;
            width: 50%;
            text-align: right;
            padding-right: 2px;
        }

        .griddle-settings {
            background-color: #FFF;
            border: 1px solid #DDD;
            color: #222;
            padding: 10px;
            margin-bottom: 10px;
        }

        .griddle-settings .griddle-columns {
            clear: both;
            display: table;
            width: 100%;
            border-bottom: 1px solid #EDEDED;
            margin-bottom: 10px;
        }

        .griddle-settings .griddle-column-selection {
            float: left;
            width: 20%;
        }

        .footer-container {
            padding: 0;
            border: 0;
            background-color: #EDEDED;
            color: #222;
        }

        .griddle-previous, .griddle-page, .griddle-next {
            float: left;
            width: 33%;
            min-height: 1px;
            margin-top: 5px;
        }

        .griddle-page {
            text-align: center;
        }

        .griddle-next {
            text-align: right;
        }

        .pagination {
            margin: 15px 0 15px 0;
        }
    }

    .toolbar {
        margin-bottom: 10px;
        padding-right: 2px;

        button {
            margin-left: 5px;
            .fa {
                padding-right: 4px;
            }
        }
    }

}