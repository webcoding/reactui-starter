#recipe {

    h1 {
        font-size: 30px;
    }

    .description {
        font-size: 16px;
        line-height: 24px;

        padding-bottom: 2px;
        margin-bottom: 20px;

        border-bottom: 1px solid #e5e5e5;

        .marked-display {
            p {
                margin-bottom: 10px;

                &:last-child {
                    margin-bottom: 5px;
                }
            }
        }
    }

    .openByClickOn {
        display: inline-block;
        margin-left: 5px;
    }

    #notes {
        p {
            margin-bottom: 3px;
        }
    }

    .fb-like {
        margin-bottom: 20px;
    }

    .private {
        padding-top: 10px;

        .fa-lock {
            color: #FF9200;
            font-size: 40px;
        }
    }

    .private-friends {
        padding-top: 10px;

        .fa-lock {
            color: #00C274;
            font-size: 40px;
        }
    }

    .carousel {
        margin-bottom: 30px;
    }

}